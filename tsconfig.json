{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2016",
    "noImplicitAny": true,
    "removeComments": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "./api",
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./api/*"]
    }
  }
}
